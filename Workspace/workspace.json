{
    "name": "Workspace",
    "apps": [
        "apps/admin-dashboard",
        "apps/starter-application"
    ],
    "build": {
        "dir": "${workspace.dir}/build"
    },
    "packages": {
        "dir": "${workspace.dir}/packages/local,${workspace.dir}/packages",
        "extract": "${workspace.dir}/packages/remote"
    },
    "tests": {
        "browser": {
            "farms": [
                {
                    "name": "webdriver",
                    "type": "generic",
                    "autoStartTunnel": false,
                    "host": "ubu-svr",
                    "port": 4444,
                    "sessionLimit": 1,
                    "pools": [
                        {
                            "name": "webdriver-pool",
                            "path": "webdriver-pool.json"
                        }
                    ]
                }
            ]
        },
        "archiveRoot": "/archiveservere2e",
        "archiveServer": "http://ubu-svr:1903"
    }
}
